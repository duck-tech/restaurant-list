 <a href="/restaurants/new">
    <button class="btn btn-primary">
      新增餐廳
    </button>
  </a>
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h4 class="mb-2 search-bar-title">尋找餐廳：</h4>
      <form action="/search" class="d-flex">
        <div class="input-group col-sm-3">
          <select class=" form-control" name="sort" class="custom-select" onchange="this.form.submit()">
            <option>設定餐廳排序</option>
            <option value="asc">A to Z</option>
            <option value="desc">Z to A</option>
            <option value="category">類別</option>
            <option value="location">地區</option>
            <option value="rating">評分</option>

          </select>
        </div>
        <div class="input-group col-sm-9">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
        
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns d-flex-wrap">
        {{#each restaurants}}
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="card-footer d-flex justify-content-end flex-wrap">
              <a href="/restaurants/{{this._id}}/edit"><button
              class="btn btn-link btn-sm"
              >Edit</button>
            </a>
            <a href="/restaurants/{{this._id}}"><button
                class="btn btn-link btn-sm"
                >Details</button>
            </a>
            <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button
              type="submit"
              class="btn btn-danger btn-sm text-white"
            >Delete</button>
          </form>    
            </div>
          </div>
        {{/each}}
        
      </div>
    </div>
  </div>
</div>